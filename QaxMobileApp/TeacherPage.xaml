<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QaxMobileApp.TeacherPage"
             BackgroundColor="#EEF1F6"
             Title="TeacherPage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <Button Text="Abiturient" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="25"
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="20" Margin="5" Clicked="Abituriyent_Page"/>

        <!--Burda asagi sinifler, Abituriyent ile eyni-->
        <Button Text="Təkmilləşdirmə" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="25"            
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="20" Margin="5"/>
        <!--Burda asagi sinifler 5 ci sinife qeder, Abituriyent ile eyni-->
        <Button Text="İbtidai" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="25"
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="20" Margin="5"/>

        <Button Text="Məlumat" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="25"
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="20" Margin="5"/>

    </VerticalStackLayout>
</ContentPage>